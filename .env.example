# =============================================================================
# Vector - Docker Services Configuration
# =============================================================================
# Copy this file to .env and customize ports to avoid conflicts
# =============================================================================

# Redis port (default: 6379)
# This is used by docker-compose, VSCode launch configs, and mise tasks
REDIS_PORT=6379

# Celery broker URL (must match REDIS_PORT above)
CELERY_BROKER_URL=redis://localhost:6379/0

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# PostgreSQL credentials
POSTGRES_DB=vector
POSTGRES_USER=vector
POSTGRES_PASSWORD=vector
